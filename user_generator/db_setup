CREATE DATABASE IF NOT EXISTS ucsfda;

USE ucsfda;

CREATE TABLE IF NOT EXISTS user (
    id int(6) NOT NULL UNIQUE,
    authorization int(1),
    ucsf_da_id int(64) UNIQUE,
    username varchar(32) NOT NULL UNIQUE,
    salt varchar(255) NOT NULL,
    password varchar(255) NOT NULL UNIQUE,
    PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS admins (
    id int(64) NOT NULL UNIQUE,
    first_name varchar(64),
    middle_name varchar(64),
    last_name varchar(64),
    email varchar(128) UNIQUE,
    cell_phone varchar(10) UNIQUE,
    work_phone varchar(10) UNIQUE,
    home_phone varchar(10) UNIQUE,
    PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS advisors (
    id int(64) NOT NULL UNIQUE,
    first_name varchar(64),
    middle_name varchar(64),
    last_name varchar(64),
    email varchar(128) UNIQUE,
    cell_phone varchar(10) UNIQUE,
    work_phone varchar(10) UNIQUE,
    home_phone varchar(10) UNIQUE,
    school varchar(64),
    PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS students (
    id int(64) NOT NULL UNIQUE,
    first_name varchar(64),
    middle_name varchar(64),
    last_name varchar(64),
    email varchar(128) UNIQUE,
    cell_phone varchar(10) UNIQUE,
    work_phone varchar(10) UNIQUE,
    home_phone varchar(10) UNIQUE,
    school varchar(64),
    grade varchar(16),
    expected_grad int(4),
    gpa double(3, 2),
    program_status varchar(16),
    fmp_id int(64) UNIQUE,
    parent_1_id int(64),
    parent_2_id int(64),
    advisor_id int(64),
    PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS parents (
    id int(64) NOT NULL UNIQUE,
    first_name varchar(64),
    middle_name varchar(64),
    last_name varchar(64),
    email varchar(128) UNIQUE,
    cell_phone varchar(10) UNIQUE,
    work_phone varchar(10) UNIQUE,
    home_phone varchar(10) UNIQUE,
    student_id int(64),
    PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS reports(
    id INT(64) NOT NULL UNIQUE,
    submitter_id int(64) NOT NULL,
    timestamp TIMESTAMP,
    program_status varchar(16),
    gpa double(3, 2),
    student_sig INT(64),
    parent_sig INT(64),
    intervention BOOL,
    commitment TEXT,
    plan BOOL,
    student_goals TEXT,
    arrange BOOL,
    arrange_notes TEXT,
    additional_notes TEXT,
    PRIMARY KEY (id)
);

